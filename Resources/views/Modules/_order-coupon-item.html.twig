<dl class="coupon-item">
    <dt class="coupon-item-code">{{ 'Coupon'|trans }}</dt>
    <dd class="coupon-item-code"><strong>{{ orderCoupon.code }}</strong></dd>
    <dt class="coupon-item-name">{{ 'Description'|trans }}</dt>
    <dd class="coupon-item-name">{{ orderCoupon.name }}</dd>
    <dt class="coupon-item-units">{{ 'Units'|trans }}</dt>
    <dd class="coupon-item-units">1</dd>
    <dt class="coupon-item-value">{{ 'Value'|trans }}</dt>
    <dd class="coupon-item-value">-{{ orderCoupon.amount|print_convert_money() }}</dd>
    <dt class="coupon-item-total">{{ 'Total'|trans }}</dt>
    <dd class="coupon-item-total">-{{ orderCoupon.amount|print_convert_money() }}</dd>
</dl>